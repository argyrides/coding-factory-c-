@page
@model StudentsApp.Pages.Students.UpdateModel
@{
}

<h2 class="mb-3">Update Student</h2>
@if (!Model.ErrorMessage.Equals(""))
{
    <h2><strong>@Model.ErrorMessage</strong></h2>
}

<form method="POST">
    <input type="hidden" name="id" value="@Model.StudentDto.Id" />
    <div class="row mb-3">
        <label for="firstname" class="col-md-1 col-form-label">Όνομα</label>
        <div class="col-md-6">
            <input type="text" disabled class="form-control" name="firstname" id="firstname"
                   placeholder="Enter firstname" value="@Model.StudentDto.Firstname" />
        </div>
    </div>
    <div class="row mb-3">
        <label for="lastname" class="col-md-1 col-form-label">Επώνυμο</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="lastname" id="lastname"
                   placeholder="Enter lastname" value="@Model.StudentDto.Lastname" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-md-1 col-md-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-md-3 d-grid">
            <a href="/" role="button" class="btn btn-outline-primary">Cancel</a>
        </div>
    </div>
</form>
